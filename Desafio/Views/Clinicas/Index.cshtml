@model IEnumerable<Desafio.Models.Clinicas>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeClinica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estrelas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeSecretaria)
        </th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeClinica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estrelas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeSecretaria)
        </td>

        <td>
            [ @Html.ActionLink("Editar", "Edit", new { id = item.ClinicaID }) ]
